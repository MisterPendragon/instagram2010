<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/scrollId2"
    android:scrollbars="none">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.RegistrationActivity"
    android:background="@color/white">
    <ImageView
        android:id="@+id/logoInst"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/nameOfUserRegistrationId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:hint="Имя пользователя"
        android:padding="10dp"
        android:textColorHint="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/logoInst"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_of_edittext"/>

    <EditText
        android:id="@+id/phoneNumberId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:hint="Номер телефона"
        android:padding="10dp"
        android:textColorHint="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/nameAndSurnameId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_of_edittext"/>
    <EditText
        android:id="@+id/mailOfRegistration"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:hint="Эл.адрес"
        android:padding="10dp"
        android:textColorHint="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/phoneNumberId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_of_edittext"/>
    <EditText
        android:id="@+id/passwordOfRegistration"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:hint="Пароль"
        android:padding="10dp"
        android:textColorHint="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/mailOfRegistration"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_of_edittext"/>
    <EditText
        android:id="@+id/nameAndSurnameId"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:hint="Имя и фамилия"
        android:padding="10dp"
        android:textColorHint="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/nameOfUserRegistrationId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_of_edittext"/>
    <Button
        android:id="@+id/buttonOfReg"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="Зарегистрироваться"
        app:layout_constraintTop_toBottomOf="@id/passwordOfRegistration"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/passwordOfRegistration"
        app:layout_constraintStart_toStartOf="@id/passwordOfRegistration"
        android:onClick="submitInformation"
        android:background="@drawable/background_for_button"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>